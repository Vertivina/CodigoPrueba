    margin: 0;
    margin-bottom: 0;
    margin-top: -10px;
    }
.right-box-up{width: 30%;float:right;}
.blue-box span{    font-size: 12px;
    margin: 4px 5px;
    color: #fffb5f;}
.blue-box h2{margin: 2px 1px;
    font-size: 26px;
    color: #ffffff;
    font-weight: normal;}
.blue-box{box-shadow: 1px 1px 4px #797979;
    background-color: #031f5d;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
    padding: 15px 4px;
    text-align: center;
  
    width: 80px;
    float: right;
    margin-top: -29px;
    z-index: 999999;
    position: relative;}

</style>
<h2>Lista de promociones</h2>





<div class="container"> 

    <div class="row" style="background-color:whitesmoke; padding:15px;box-shadow: 0 0 20px blue;"> 
        <div class="col-md-12">  
        <form asp-controller="Servicios" asp-action="Index">
         <p>
        Buscar: <input type="text" name="SearchString">
        <input type="submit" value="Buscar" />
            </p>
            </form>


@foreach (var item in Model) {

	<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
			<div class="prise-box">
			<img src="@Url.Content(item.Imagen)" alt="imagen" class="img-responsive">
			<div class="info-this">
				<div class="left-box">
				<h2> @Html.DisplayFor(modelItem => item.Nombre)
					 </h2>
				<a asp-action="Details" asp-route-id="@item.ID">MÃ¡s detalles aqui</a>
				</div>
