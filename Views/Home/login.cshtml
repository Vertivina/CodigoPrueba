    }

    input[type="submit"] {
        background: linear-gradient(#FFDA63, #FFB940);
        border: 0;
        color: brown;
        opacity: 0.8;
        cursor: pointer;
        border-radius: 20px;
        margin-bottom: 0;
    }

    input[type="submit"]:hover{
        opacity: 1;
    }

    input[type="submit"]:active{
        transform: scale(0.95);
    }
    
     @media(max-width:768px){
        form {
            width: 75%;
        }
    }

    @media(max-width:480px){
        form {
            width: 95%;
        }
    }
</style>


