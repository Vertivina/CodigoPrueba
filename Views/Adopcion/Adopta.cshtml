@model List<Mascota>
    
@{
    ViewData["Title"] = "Adopcion";
     Layout="~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewData["Title"]</h2>
<style>
    #info{
        background: black;
        color: beige;
        text-align: center;
        padding: 20px;
    }
    #info.contenedor{
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }
    .info-mascota{
        margin: 20px;
    }

    .info-mascota img{
        width: 180px;
        height: 180px;
        border-radius: 50%;
        border: 7px solid white;
    }

</style>
<div><center>
    <form asp-action="" method="GET">
    <input type="text" name="buscar" class="form-control" 
    value="@ViewBag.buscar" style="width: 300px;" placeholder="Busca que mascota adoptar"><br>
    <button type="submit" class="btn btn-primary">Buscar</button><br><br>
    </center>
</form>
</div>

<section id="info">
<h3>Para muchos de nosotros las mascotas no son simples compañeros, son miembros de la familia.</h3>
